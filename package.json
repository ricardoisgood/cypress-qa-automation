{
  "name": "cypress-cucumber-starter",
  "version": "1.0.0",
  "private": true,
  "description": "Starter kit: Cypress + TypeScript + Cucumber (badeball) + esbuild",
  "scripts": {
    "prepare": "cypress install",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test": "cypress run",
    "lint:types": "tsc --noEmit",
    "test:report": "cypress run --browser chrome",
    "merge:report": "marge cypress/reports/html/.jsons/*.json --reportDir cypress/reports/html",
    "report:full": "npm run test:report && npm run merge:report && start cypress/reports/html/mochawesome.html"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": "cypress/e2e/step_definitions/**/*.ts"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^23.2.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@types/node": "^22.18.6",
    "cypress": "^13.17.0",
    "cypress-downloadfile": "^1.2.4",
    "cypress-mochawesome-reporter": "^4.0.2",
    "cypress-real-events": "^1.15.0",
    "marge": "^1.0.1",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "typescript": "^5.9.2"
  }
}
